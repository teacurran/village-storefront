{
  "name": "village-storefront-admin-spa",
  "version": "1.0.0",
  "description": "Admin SPA for Village Storefront - Vue 3 + Vite + PrimeVue",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "generate:api": "openapi-typescript ../../../api/v1/openapi.yaml -o src/api/generated/schema.ts && openapi --input ../../../api/v1/openapi.yaml --output src/api/generated --client axios",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.1",
    "axios": "^1.6.5",
    "idb": "^8.0.0",
    "pinia": "^2.1.7",
    "primevue": "^3.48.1",
    "primeicons": "^6.0.1",
    "uuid": "^9.0.1",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.6.1",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/test": "^7.6.7",
    "@storybook/vue3": "^7.6.7",
    "@storybook/vue3-vite": "^7.6.7",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^1.1.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-vue": "^9.19.2",
    "jsdom": "^23.2.0",
    "openapi-typescript": "^6.7.3",
    "openapi-typescript-codegen": "^0.27.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "storybook": "^7.6.7",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
